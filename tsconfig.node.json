{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["vite.config.ts"]
}
